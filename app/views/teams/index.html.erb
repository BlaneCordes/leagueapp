<h1>Listing teams</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Players</th>
    <th>Wins</th>
    <th>Losses</th>
  </tr>

<% @teams.each do |team| %>
  <tr>
    <td><%= team.name %></td>
		<td><% team.players.each do |x| %>
			<%= x.name  %><br />
		<% end %>
		<td><%= team.wins.count %></td>
		<td><%= team.losses.count %></td>
    <td><%= link_to 'Show', team %></td>
    <td><%= link_to 'Edit', edit_team_path(team) %></td>
    <td><%= link_to 'Destroy', team, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Team', new_team_path %>
